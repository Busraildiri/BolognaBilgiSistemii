@model BolognaBilgiSistemi.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    string userType = Model.UserType;
}

<h2>@(userType == "Administrator" ? "İdareci Girişi" : "Öğretim Elemanı Girişi")</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="TCNumber">TC Kimlik Numarası:</label>
        <input type="text" class="form-control" id="TCNumber" name="TCNumber" asp-for="TCNumber" required>
    </div>
    <div class="form-group">
        <label for="Password">Şifre:</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required>
    </div>
    <input type="hidden" asp-for="UserType" />
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
