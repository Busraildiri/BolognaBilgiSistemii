@model BolognaBilgiSistemi.Models.ViewModels.CourseViewModel

<h2>Ders Düzenleme: @Model.Name</h2>

<form asp-action="EditCourse">
    <input type="hidden" asp-for="CourseId" />

    <div>
        <label>Ders Adı</label>
        <input type="text" asp-for="Name" readonly />
    </div>
    <div>
        <label>Bölüm</label>
        <input type="text" asp-for="DepartmentName" readonly />
    </div>
    <div>
        <label>Öğretim Elemanı</label>
        <input type="text" asp-for="FacultyMemberName" readonly />
    </div>
    <div>
        <label>14 Haftalık İçerik</label>
        @for (int i = 0; i < 14; i++)
        {
            <div>
                <label>Hafta @i+1</label>
                <input type="text" asp-for="WeeklyContents[@i]" />
            </div>
        }
    </div>
    <div>
        <label>Kaynak Kitaplar</label>
        <textarea asp-for="SourceBooks" rows="5"></textarea>
    </div>
    <div>
        <label>Ön Koşullar</label>
        <textarea asp-for="Prerequisites" rows="3"></textarea>
    </div>

    <button type="submit">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
